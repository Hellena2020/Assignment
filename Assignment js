// Mon - 7am
// Tue - Thur - 4am
// Fri - 9am
// Sat - Sun - 8am

let day = "Monday"
switch(day){
    case "Monday":
    console.log("7am");
    break;
    // break means get out and start something else at a different time
    case "Tuesday":
    case "Wednesday":
    case "Thursday":
        console.log('4am');
        break;
    case "Friday":
        console.log('9am');
        break;
    case "Saturday":
    case "Sunday":
        console.log('8am');
        break;
    default:
        console.log('7am - watch a movie')
        // if you enter wrong day like holiday it will be not matching and its put in default.

}